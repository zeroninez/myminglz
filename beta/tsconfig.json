{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*", "./*", "public/*"],
      "icons": ["public/icons"],
      "img": ["public/img"]
    },
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/screens",
    "src/screens",
    "src/app/screens/HubScreen/index/tsx"
  ],
  "exclude": ["node_modules"]
}
